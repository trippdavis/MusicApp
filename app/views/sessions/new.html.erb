<h1>Sign In</h1>

<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<form action="/session" method="post">
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">

  <label for="user_email">Email:</label>
  <input
    name="user[email]"
    type="text"
    id="user_email"
    value="<%= @user.email %>">
  <br>

  <label for="user_password">Password:</label>
  <input
    name="user[password]"
    type="password"
    id="user_password">
  <br>

  <input type="submit" value="Submit">
</form>
