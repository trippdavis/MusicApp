<%= render "/shared/top", logging_in: false, signing_up: false %>

<h1><%= @track.title %></h1>
<h3><%= @track.album.title %>-<%= @track.track_type %></h3>
<p>
  Lyrics:
  <%= @track.lyrics %>
</p>

<p>
  <%= link_to "Edit Track", edit_track_url(@track) %>
  <%= link_to "Delete Track", track_url(@track), method: :delete %>
</p>

<p>
  <%= link_to "Back to Album", album_url(@album) %>
</p>
<br>

<hr>

<p>
  <h3>Notes:</h3>
  <% @track.notes.each do |note| %>
    <%= render 'notes/note', note: note %>
  <% end %>
  <% if current_user %>
    <%= render "notes/form", track: @track %>
  <% end %>
</p>
