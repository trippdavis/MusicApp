<%= render "/shared/top", logging_in: false, signing_up: true %>

<h1>Sign Up</h1>

<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<form action="/users" method="post">
  <input name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

  <label for="user_email">Email:</label>
  <input id="user_email"
         name="user[email]"
         type="text"
         value="<%= @user.email %>">
  <br>

  <label for="user_password">Password:</label>
  <input id="user_password"
         name="user[password]"
         type="password">
  <br>

  <input type="submit"
         value="Submit">
</form>
