<h1>Edit Band</h1>

<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<form action=<%= band_url(@band) %> method="post">
  <input
    type="hidden"
    name="_method"
    value="patch">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="band_name">Name:</label>
  <input
    id="band_name"
    type="text"
    name="band[name]"
    value="<%= @band.name %>">

  <input type="submit" value="Submit">
</form>
