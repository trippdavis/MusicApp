<h1>Add a New Band</h1>

<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>

<form action="/bands" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="band_name">Name:</label>
  <input
    type="text"
    name="band[name]"
    id="band_name"
    value="<%= @band.name %>">
  <br>

  <input type="submit" value="Submit">
</form>
